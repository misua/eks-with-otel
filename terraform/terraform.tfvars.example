# Example Terraform Variables
# Copy this file to terraform.tfvars and customize the values

# AWS Configuration
aws_region = "us-west-2"
environment = "dev"

# EKS Cluster Configuration
cluster_name = "eks-otel-crud"
kubernetes_version = "1.28"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
private_subnets = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
public_subnets = ["10.0.101.0/24", "10.0.102.0/24", "10.0.103.0/24"]

# EKS Node Group Configuration
node_instance_types = ["t3.medium"]
node_group_min_size = 1
node_group_max_size = 4
node_group_desired_size = 2

# Storage Configuration
storage_class = "gp2"

# Application Configuration
grafana_admin_password = "admin123"
git_repo_url = "https://github.com/yourusername/eks-otel-crud.git"

# Helm Chart Versions (update as needed)
prometheus_chart_version = "51.2.0"
tempo_chart_version = "1.6.2"
argocd_chart_version = "5.46.7"
ebs_csi_driver_version = "v1.24.0-eksbuild.1"

# Additional Tags
additional_tags = {
  Owner = "your-name"
  Team  = "platform"
}
